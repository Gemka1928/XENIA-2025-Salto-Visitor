<script>
    // Data storage key
    const STORAGE_KEY = 'xenia_2025_visitors';

    // Load data from localStorage
    function loadVisitors() {
        const data = localStorage.getItem(STORAGE_KEY);
        return data ? JSON.parse(data) : [];
    }

    // Save data to localStorage
    function saveVisitors(visitors) {
        localStorage.setItem(STORAGE_KEY, JSON.stringify(visitors));
        updateUI();
    }

    // Add new visitor
    document.getElementById('registrationForm').addEventListener('submit', function(e) {
        e.preventDefault();

        const interests = Array.from(document.querySelectorAll('input[name="interests"]:checked'))
            .map(el => el.value);

        const visitor = {
            id: Date.now(),
            firstName: document.getElementById('firstName').value,
            lastName: document.getElementById('lastName').value,
            company: document.getElementById('company').value,
            jobTitle: document.getElementById('jobTitle').value,
            email: document.getElementById('email').value,
            phone: document.getElementById('phone').value,
            interests: interests,
            notes: document.getElementById('notes').value,
            timestamp: new Date().toLocaleString()
        };

        const visitors = loadVisitors();
        visitors.push(visitor);
        saveVisitors(visitors);

        // Show success message
        const successMsg = document.getElementById('successMessage');
        successMsg.classList.add('show');
        setTimeout(() => successMsg.classList.remove('show'), 3000);

        // Reset form
        this.reset();
    });

    // Update UI
    function updateUI() {
        const visitors = loadVisitors();
        const listContainer = document.getElementById('visitorList');

        // Update statistics
        document.getElementById('totalVisitors').textContent = visitors.length;
        
        const uniqueCompanies = new Set(visitors.map(v => v.company)).size;
        document.getElementById('uniqueCompanies').textContent = uniqueCompanies;

        const today = new Date().toLocaleDateString();
        const todayCount = visitors.filter(v => v.timestamp.includes(today)).length;
        document.getElementById('todayVisitors').textContent = todayCount;

        // Update visitor list
        if (visitors.length === 0) {
            listContainer.innerHTML = '<div class="empty-state"><p>üì≠ No visitors registered yet</p></div>';
            return;
        }

        listContainer.innerHTML = visitors.map(visitor => `
            <div class="visitor-item">
                <div class="info">
                    <div class="name">${visitor.firstName} ${visitor.lastName}</div>
                    <div class="company">${visitor.company} ${visitor.jobTitle ? '‚Ä¢ ' + visitor.jobTitle : ''}</div>
                    ${visitor.interests.length > 0 ? `
                        <div style="margin-top: 5px;">
                            ${visitor.interests.map(i => `<span class="interest-tag">${i}</span>`).join('')}
                        </div>
                    ` : ''}
                    <div class="time-stamp">${visitor.timestamp}</div>
                </div>
                <button class="delete-btn" onclick="deleteVisitor(${visitor.id})">Delete</button>
            </div>
        `).reverse().join('');
    }

    // Delete visitor
    function deleteVisitor(id) {
        const visitors = loadVisitors();
        const filtered = visitors.filter(v => v.id !== id);
        saveVisitors(filtered);
    }

    // Export to CSV
    function exportToCSV() {
        const visitors = loadVisitors();
        if (visitors.length === 0) {
            alert('No data to export');
            return;
        }

        const headers = ['First Name', 'Last Name', 'Company', 'Job Title', 'Email', 'Phone', 'Interests', 'Notes', 'Registered'];
        const rows = visitors.map(v => [
            v.firstName,
            v.lastName,
            v.company,
            v.jobTitle,
            v.email,
            v.phone,
            v.interests.join('; '),
            v.notes,
            v.timestamp
        ]);

        const csv = [
            headers.join(','),
            ...rows.map(row => row.map(cell => `"${cell}"`).join(','))
        ].join('\n');

        const blob = new Blob([csv], { type: 'text/csv' });
        const url = window.URL.createObjectURL(blob);
        const a = document.createElement('a');
        a.href = url;
        a.download = `XENIA_2025_Visitors_${new Date().toISOString().split('T')[0]}.csv`;
        document.body.appendChild(a);
        a.click();
        document.body.removeChild(a);
        window.URL.revokeObjectURL(url);
    }

    // Export to JSON
    function exportToJSON() {
        const visitors = loadVisitors();
        if (visitors.length === 0) {
            alert('No data to export');
            return;
        }

        const json = JSON.stringify(visitors, null, 2);
        const blob = new Blob([json], { type: 'application/json' });
        const url = window.URL.createObjectURL(blob);
        const a = document.createElement('a');
        a.href = url;
        a.download = `XENIA_2025_Visitors_${new Date().toISOString().split('T')[0]}.json`;
        document.body.appendChild(a);
        a.click();
        document.body.removeChild(a);
        window.URL.revokeObjectURL(url);
    }

    // Clear all data
    function clearAllData() {
        if (confirm('Are you sure? This will delete all visitor data. This action cannot be undone.')) {
            localStorage.removeItem(STORAGE_KEY);
            updateUI();
        }
    }

    // Initial UI update
    updateUI();

    // Auto-save to backup (every 5 minutes)
    setInterval(() => {
        const visitors = loadVisitors();
        console.log(`‚úÖ Auto-backup: ${visitors.length} visitors saved`);
    }, 300000);
</script>
